
<div class="map_container">
    <img src="@(MapFile)" class="map_image">

    <svg xmlns="http://www.w3.org/2000/svg"
         version="1.1"
         id="svgMap"
         class="map_areas"
         viewBox="0 0 @(MapWidth) @(MapHeight)">

        @foreach(RegionDefinition regionDefinition in RegionDefinitions)
        {
            <MapRegion 
                Definition=regionDefinition
                FinalClass="@(AppState.Value.Map.RegionState[regionDefinition.Id].FinalClass)"
                OnRegionSelected="@(() => OnRegionSelectedHandler( regionDefinition.Id ))" />
        }
    </svg>

</div>



