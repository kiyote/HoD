@page "/play"
@inherits PlayGamePageBase
@using HeartOfDarkness.Client.Pages.Components.Map
@using HeartOfDarkness.Client.Pages.Components.Matrix

<button class="btn btn-primary" @onclick=ToggleDisplay>Toggle</button>

<h3>Play</h3>

@if(PageState == DisplayState.Map)
{
    <MapComponent State=GameState.Value.Game.MapState Definition=GameState.Value.Game.MapDefinition />
}
else if (PageState == DisplayState.Matrix) 
{
    <MatrixComponent GameState=GameState.Value />
}
